<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
        <style name="Base.Theme.EVcharge" parent="Theme.Material3.DayNight.NoActionBar">
            <!-- Customize your light theme here. -->
            <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
            <item name="colorPrimary">@color/green</item>
            <item name="colorPrimaryVariant">@color/green</item>
            <item name="colorOnPrimary">@color/white</item>

            <item name="colorSecondary">@color/green</item>
            <item name="colorSecondaryVariant">@color/green</item>
            <item name="colorOnSecondary">@color/black</item>

            <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        </style>

        <style name="Theme.EVcharge" parent="Base.Theme.EVcharge" />

        <style name="FilterSwitchThemeGreen">
            <item name="colorAccent">#63DF68</item>
        </style>

        <style name="HeadingStyle">
            <item name="fontFamily">@font/notoserif_regular</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">32dp</item>
        </style>

        <style name="HeaderTextStyle">
            <item name="fontFamily">@font/red_hat_display_regular</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">15dp</item>
        </style>

        <style name="TextStyle">
            <item name="fontFamily">@font/red_hat_display_regular</item>
            <item name="android:textSize">16dp</item>
        </style>

        <style name="EditTextStyle">
            <item name="fontFamily">@font/red_hat_display_regular</item>
            <item name="android:padding">15dp</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textColorHint">@color/grey</item>
            <item name="android:textSize">14dp</item>
        </style>

        <style name="GreyTextStyle">
            <item name="android:textSize">12dp</item>
            <item name="fontFamily">@font/red_hat_display_regular</item>
            <item name="android:textColor">@color/grey</item>
        </style>

        <style name="GreyStyle">
            <item name="android:textSize">12dp</item>
            <item name="fontFamily">@font/red_hat_display_regular</item>
            <item name="android:textColor">@color/light_grey</item>
        </style>

        <style name="ButtonStyle">
            <item name="fontFamily">@font/red_hat_display_regular</item>
            <item name="android:textSize">16dp</item>
            <item name="backgroundTint">@color/green</item>
            <item name="android:textColor">@color/white</item>
        </style>

        <style name="WhiteButtonStyle">
            <item name="fontFamily">@font/red_hat_display_regular</item>
            <item name="android:textSize">16dp</item>
            <item name="android:textColor">@color/green</item>
        </style>

        <style name="HeaderStyle">
            <item name="fontFamily">@font/red_hat_display_regular</item>
            <item name="android:textSize">20dp</item>
        </style>

        <style name="ItemTextStyle">
            <item name="fontFamily">@font/red_hat_display_regular</item>
            <item name="android:textSize">14dp</item>
        </style>

        <style name="GreyItemTextStyle">
            <item name="fontFamily">@font/red_hat_display_regular</item>
            <item name="android:textSize">12dp</item>
            <item name="android:textColor">@color/light_grey</item>
        </style>

        <style name="PopupAnimation">
            <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
            <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        </style>

        <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

        </style>
        <style name="ButtonTextStyle">
            <item name="fontFamily">@font/red_hat_display_regular</item>
            <item name="android:textSize">10dp</item>
            <item name="android:textColor">@color/white</item>
        </style>

</resources>
